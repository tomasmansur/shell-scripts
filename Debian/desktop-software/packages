gui_debian_packages_()
{
	UTILS_="blueman gnome-disk-utility hollywood xarchiver"

	## text edit
	CODING_="mousepad"

	## web browser and torrent
	WEB_="firefox-esr qbittorrent"

	## security
	SECURITY_="keepass2 wireshark"

	## office
	OFFICE_="libreoffice ristretto atril"

	## multimedia
	MULTIMEDIA_="vlc clementine audacity asunder xfburn gimp simplescreenrecorder"

	## gaming
	GAMING_="hex-a-hop blastem dosbox"

	apt install -y $UTILS_ $CODING_ $WEB_ $SECURITY_ $OFFICE_ $MULTIMEDIA_ $GAMING_
	apt install --no-recommends -y kdenlive ## this way avoids KDE stuff installation.

}
gui_debian_packages_
