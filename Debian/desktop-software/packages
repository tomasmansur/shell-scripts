gui_debian_packages_()
{
	UTILS_="gnome-disk-utility hollywood xarchiver"

	## text edit
	CODING_="mousepad"

	## web browser and torrent
	WEB_="qbittorrent"

	## security
	SECURITY_="keepass2 wireshark"

	## office
	OFFICE_="libreoffice ristretto atril"

	## multimedia
	MULTIMEDIA_="mpv clementine audacity sonic-visualiser asunder xfburn gimp kdenlive simplescreenrecorder"

	## gaming
	GAMING_="hex-a-hop blastem dosbox"

	apt install --no-install-recommends -y $UTILS_ $CODING_ $WEB_ $SECURITY_ $OFFICE_ $MULTIMEDIA_ $GAMING_

}
gui_debian_packages_
