gui_debian_packages_()
{
	UTILS_="gnome-disk-utility xarchiver simplescreenrecorder"

	## text edit
	CODING_="geany mousepad"

	## web browser and torrent
	WEB_="qbittorrent"

	## security
	SECURITY_="wireshark"

	## office
	OFFICE_="libreoffice ristretto atril"

	## multimedia
	MULTIMEDIA_="vlc audacity asunder xfburn gimp"

	## gaming
	GAMING_="hex-a-hop blastem dosbox"

	apt install -y $UTILS_ $CODING_ $WEB_ $SECURITY_ $OFFICE_ $MULTIMEDIA_ $GAMING_

}
gui_debian_packages_
