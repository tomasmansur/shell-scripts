cli_debian_packages_()
{
	TOOLS_="jq e2fsprogs ascii man-db neofetch lsb-release htop psmisc lm-sensors ffmpeg john cowsay fortunes flex locales-all texinfo texlive"

	## cryptography
	CRYPTOGRAPHY_="gpg gnupg gnupg2 gpg-agent gnupg-agent dirmngr openssl easy-rsa ca-certificates p7zip-full p7zip"

	## network
	NETWORK_="wpasupplicant bmon socat whois curl wget mailutils dnsutils tcpdump ethtool netdata hydra ipcalc"
	
	## firmware
	FIRMWARE_="firmware-atheros"

	## cli web browsers
	WEB_="googler w3m w3m-img lynx"

	## Dev and C stuffs
	LUA_VERSION_=5.4
	PYTHON_VERSION_=3
	PYTHON_="python$PYTHON_VERSION_ python$PYTHON_VERSION_-venv python$PYTHON_VERSION_-pip"
	DEV_="gcc g++ gdb make cmake lua$LUA_VERSION_ mono-complete perl openjdk-17-jdk rustc binutils git build-essential $PYTHON_ libpcap-dev libssl-dev manpages-dev libsystemd-dev zlib1g-dev"

	## All
	apt update
	apt install -y $TOOLS_ $CRYPTOGRAPHY_ $NETWORK_ $WEB_ $DEV_ $FIRMWARE_

	## python
	update-alternatives --install /usr/bin/python python /usr/bin/python$PYTHON_VERSION_ 1
	cat > /sbin/upgrade-pip <<'EOF'
#!/bin/bash
pip install -U pip
pip install -U --pre scapy[complete]
pip install -U pyinstaller
EOF
	chmod +x /sbin/upgrade-pip
	/sbin/upgrade-pip

	## jdk17
	cat > /etc/profile.d/java.sh <<'EOF'
export JAVA_HOME=$(dirname $(dirname $(readlink $(readlink $(which java)))))
export PATH=$PATH:$JAVA_HOME/bin
EOF
	source /etc/profile.d/java.sh
	update-alternatives --config java
	update-alternatives --config javac
	
	## services to config
	systemctl stop netdata
	systemctl disable netdata
	systemctl stop mono-xsp4
	systemctl disable mono-xsp4

}

cli_debian_packages_
